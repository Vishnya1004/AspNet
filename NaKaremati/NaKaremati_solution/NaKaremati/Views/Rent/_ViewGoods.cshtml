@model List<NaKaremati.Models.GoodVM>
<div class="table-responsive">
    <table class="table-condensed">
        <tr>
            <th width="30%" rowspan="2" class="table-head">Name</th>
            <th width="20%" rowspan="2" class="table-head">Producer</th>
            <td width="30%" colspan="3" class="table-head">Rent per a day</td>
            <th width="10%" rowspan="2" class="table-head">Image</th>
            <th width="10%" rowspan="2" class="table-head">Rent</th>
            <th width="10%" rowspan="2" class="table-head">More Info</th>
        </tr>
        <tr>
            <th scope="col" class="table-head">Price 1-3 days</th>
            <th scope="col" class="table-head">Price 4-6 days</th>
            <th scope="col" class="table-head">Price > 6 days</th>
        </tr>

        @foreach (var goodVM in @Model)
        {
            <tr>
                <th>@goodVM.Good.Name</th>
                <th>@goodVM.Good.Producer.Name</th>
                <th>@goodVM.Good.RentPrice <span class="big-sign">&#8372</span> </th>
                <th>@goodVM.Good.RentPrice <span class="big-sign">&#8372</span> </th>
                <th>@goodVM.Good.RentPrice <span class="big-sign">&#8372</span> </th>
                <th>
                    <img src="@string.Format("/Content/img/{0}", @goodVM.Images.First().Name)" alt="Image not found" />
                </th>
                <th>
                    <button class="button-cart"><img src="/Content/img/cart.jpg" alt="No image"/></button>
                </th>
                <th>
                    @Html.ActionLink("Details", "GetGoodDetails", "Rent", new { goodId = goodVM.Good.Id, categoryId = goodVM.SelectedCategoryId }, new { @class = "btn btn-primary" })
                </th>
            </tr>
        }
    </table>
   </div>



